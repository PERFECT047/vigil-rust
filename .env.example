# Example .env for local development
# Copy this file to .env and fill in real values before running the API

# Postgres connection URL
DATABASE_URL=postgres://vigil:password@localhost/vigil_dev

# JWT secret used to sign tokens (keep this secret in production)
JWT_SECRET=change_this_to_a_secure_random_value

# JWT expiry in seconds (default used by API if not set)
JWT_EXPIRY_SECONDS=3600
